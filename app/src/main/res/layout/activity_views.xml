<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <cn.alpha.ui.view.TitleBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        app:backgroudColor="@color/colorPrimary"
        app:titleColor="@color/white"
        app:titleText="Views"
        app:titleTextSize="18sp"/>

    <Button
        android:id="@+id/btn_sharped_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SharpedImageView"/>

    <Button
        android:id="@+id/btn_think_progressor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="think progressor"/>

    <Button
        android:id="@+id/btn_labelview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="labelview"/>
</LinearLayout>