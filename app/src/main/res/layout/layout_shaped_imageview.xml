<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <cn.alpha.ui.view.TitleBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        app:backgroudColor="@color/colorPrimary"
        app:titleColor="@color/white"
        app:titleText="ShapedImageView"
        app:titleTextSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <cn.alpha.ui.view.ShapedImageView
            android:id="@+id/shape_img_round_rect"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_gravity="center_horizontal"
            app:round_radius="10dip"
            app:shape_mode="round_rect"/>

        <cn.alpha.ui.view.ShapedImageView
            android:id="@+id/shape_img_circle"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            app:shape_mode="circle"/>
    </LinearLayout>
</LinearLayout>